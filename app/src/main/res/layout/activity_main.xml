<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/blue">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Hello World!"
        android:gravity="center"
        android:textColor="@color/red"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Piero Zavala Chira"
        android:textColor="@color/red"
        android:gravity="center"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Introduce un nÃºmero "
        android:textColor="@color/red"
        android:gravity="center"
        android:textSize="30dp"
        />
    <EditText
        android:id="@+id/etNumero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        />
    <Button
        android:id="@+id/btnJugar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jugar"
        android:background="@drawable/btn_color01"
        />
    <TextView
        android:id="@+id/tvPista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pista"
        android:gravity="center"
        android:textSize="30dp"
        android:textColor="@color/white"
        />
    <TextView
        android:id="@+id/tvInfoJugada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="info de la jugada"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="@color/white"
        />
    <TextView
        android:id="@+id/tvNumeroJugada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0 jugadas"
        android:gravity="center"
        android:textColor="@color/white"

        />
    <Button
        android:id="@+id/btnReset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:background="@drawable/btn_color01"
        />
    <Button
        android:id="@+id/btnJugadaExtra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jugada Extra"
        android:background="@drawable/btn_color01"
        />



</LinearLayout>